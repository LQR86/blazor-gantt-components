@inherits LayoutComponentBase
@using GanttComponents.Components.LanguageSelector

<PageTitle>GanttComponents</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="top-row-left">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
            <div class="top-row-right">
                <LanguageSelector />
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    // No more cascading parameter management needed!
    // Each component manages its own I18N subscription via dependency injection
}
