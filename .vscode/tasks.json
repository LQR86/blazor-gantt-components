{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/GanttComponents/"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Format Code (Pre-commit)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"format",
				"--verbosity",
				"diagnostic"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Format and Verify (CI Check)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"format",
				"--verify-no-changes",
				"--verbosity",
				"diagnostic"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$msCompile"
		}
	]
}